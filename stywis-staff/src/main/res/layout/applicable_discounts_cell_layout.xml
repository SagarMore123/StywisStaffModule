<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="applicableDiscountDTO"
            type="com.astrika.stywis_staff.models.OutletDiscountDetailsDTO" />

        <variable
            name="discountDaysTimingDTO"
            type="com.astrika.stywis_staff.models.DiscountDaysTimingDTO" />

        <variable
            name="isViewDiscount"
            type="Boolean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_rounded_corner_white_background_with_accent_stroke"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/air_bnb_cereal_medium"
                        android:text="@{applicableDiscountDTO.outletDiscountCategory == null ? `N/A` : applicableDiscountDTO.outletDiscountCategory}"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"
                        tools:text="Membership Discount" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/air_bnb_cereal_medium"
                        android:text="@{`Get ` + discountDaysTimingDTO.discountApplicable +`% off`}"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"
                        tools:text="Get 5% off" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/air_bnb_cereal_medium"
                        android:text="@{`Complimentary : ` + (discountDaysTimingDTO.complimentaryApplicable == null ? `N/A` : discountDaysTimingDTO.complimentaryApplicable)}"
                        tools:text="Complimentary : " />


                </LinearLayout>

                <TextView
                    android:id="@+id/apply_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/air_bnb_cereal_medium"
                    android:text="Apply"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"
                    android:visibility="@{isViewDiscount ? View.GONE : View.VISIBLE}" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/air_bnb_cereal_book"
                    android:text="Terms &amp; Conditions Apply"
                    tools:text="Terms &amp; Conditions Apply" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/air_bnb_cereal_medium"
                        android:text="- "
                        android:textColor="@color/colorDarkBlack"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/air_bnb_cereal_book"
                        android:text="@{ discountDaysTimingDTO.terms == null ? `N/A` : discountDaysTimingDTO.terms}"
                        tools:text=" terms" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</layout>

