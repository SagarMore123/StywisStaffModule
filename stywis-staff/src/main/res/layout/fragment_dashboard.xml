<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.astrika.stywis_staff.view.dashboard.viewmodels.DashboardViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dashboardTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                imageUrl="@{viewModel.profilePathObservableField}"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="15dp"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="2dp"
                tools:src="@drawable/ic_person_placeholder" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/staff_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/air_bnb_cereal_book"
                    android:text="@{viewModel.firstName+` `+viewModel.lastName}"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp"
                    tools:text="Rajesh Makwana" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/air_bnb_cereal_book"
                    android:text="@{viewModel.location}"
                    android:textColor="@color/colorWhite"
                    tools:text="Lakshmi Supermarket, Sion" />

            </LinearLayout>

            <ImageView
                android:id="@+id/wishListCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_wishlist_icon"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/dashboardTitleLayout"
            android:background="@drawable/circular_top_rounded_corner_white_background"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/dashboardTabLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:tabGravity="center"
                app:tabIndicatorColor="@color/btn_color"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/btn_color"
                app:tabTextAppearance="@font/air_bnb_cereal_book"
                app:tabTextColor="@color/colorBlack" />


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/dashboardViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>

    </RelativeLayout>


</layout>
