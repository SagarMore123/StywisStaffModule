        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_quantity_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/air_bnb_cereal_book"
                android:text="@{`Quantity : ` + dishDetails.quantity.toString()}"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:visibility="@{isView ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@id/total_price_text_view"
                app:layout_constraintEnd_toStartOf="@id/total_price_text_view"
                tools:text="Quantity : 1" />

            <RelativeLayout
                android:id="@+id/quantity_layout"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:background="@drawable/rounded_corner_white_background_with_red_stroke"
                android:visibility="@{isView ? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toStartOf="@id/total_price_text_view"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/remove_image_view"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:padding="3dp"
                    android:src="@drawable/ic_product_remove_24"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/quantity_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/air_bnb_cereal_book"
                    android:text="@{dishDetails.quantity.toString()}"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    tools:text="1" />

                <ImageView
                    android:id="@+id/add_image_view"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="3dp"
                    android:src="@drawable/ic_add"
                    app:tint="@color/colorPrimary" />

            </RelativeLayout>

            <TextView
                android:id="@+id/total_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/air_bnb_cereal_medium"
                android:textColor="@color/colorBlack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="₹ 134" />

        </LinearLayout>

    </LinearLayout>


