                            tools:text="Start your day with this healthy gram " />
            -->


            <TextView
                android:id="@+id/customized_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/air_bnb_cereal_book"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@id/veg_non_veg_image_view"
                app:layout_constraintTop_toBottomOf="@id/dish_price_text_view"
                tools:text="Extra Cheese, Orange Juice" />

            <TextView
                android:id="@+id/customize_drop_down_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circular_rounded_corner_grey_background"
                android:fontFamily="@font/air_bnb_cereal_book"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text="Customize"
                android:textColor="@color/colorBlack"
                app:drawableEndCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
                app:drawableTint="@color/colorPrimary"
                app:layout_constraintStart_toEndOf="@id/veg_non_veg_image_view"
                app:layout_constraintTop_toBottomOf="@id/customized_txt" />

        </LinearLayout>

