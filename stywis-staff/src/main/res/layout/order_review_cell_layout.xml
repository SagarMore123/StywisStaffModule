<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="isView"
            type="Boolean" />


        <variable
            name="dishDetails"
            type="com.astrika.stywis_staff.models.menu.DishDetailsDTO" />


    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/veg_non_veg_image_view"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/circular_green_background"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dish_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/air_bnb_cereal_medium"
                android:text="@{dishDetails.productName}"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/veg_non_veg_image_view"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Tomato Omlette" />

            <!--            android:text="@{dishDetails.productDiscountPrice.compareTo(bigDecimal.ZERO) == 1 ? `₹ `+ dishDetails.productDiscountPrice.toString() : `₹ `+ dishDetails.productOriPrice.toString()}"-->

