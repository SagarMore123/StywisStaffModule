    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:fontFamily="@font/air_bnb_cereal_book"
            android:text="@{checkInDTO.lastRequestedTime.empty ? `00:00 AM`: checkInDTO.lastRequestedTime}"
            android:textSize="12dp"
            android:visibility="gone"
            tools:text="05:31 PM" />

        <TextView
            android:id="@+id/serial_no_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/air_bnb_cereal_book"
            tools:text="1." />

        <TextView
            android:id="@+id/request_type_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="0.2"
            android:fontFamily="@font/air_bnb_cereal_medium"
            tools:text="Server Request" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="0.1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/air_bnb_cereal_book"
                android:text="@{checkInDTO.checkInTime.empty ? `00:00 AM`: utils.getDateFormattedTime(checkInDTO.checkInTime)}"
                tools:text="05:40 PM" />

            <TextView
                android:id="@+id/timer_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/air_bnb_cereal_book"
                android:textColor="@color/colorGreen"
                android:textSize="12dp"
                tools:text="3 min" />

        </LinearLayout>

        <Button
            android:id="@+id/doneBtn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.1"
            android:background="@drawable/circular_rounded_corner_10dp_white_background_with_primary_stroke"
            android:fontFamily="@font/air_bnb_cereal_book"
            android:text="Done?"
            android:textAllCaps="false"
            android:textSize="12dp" />

    </LinearLayout>


</layout>

